<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylermitchell.connect3app.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="364dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/counter1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="dropIn"
            android:tag="1" />

        //app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:onClick="dropIn"
            android:tag="2" />
        //app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:onClick="dropIn"
            android:tag="3" />

        //app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="4" />
        //app:srcCompat="@drawable/red"

        <ImageView
            android:id="@+id/counter5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="5" />
        //app:srcCompat="@drawable/red"

        <ImageView
            android:id="@+id/counter6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="6" />
        //app:srcCompat="@drawable/red" />


        <ImageView
            android:id="@+id/counter7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="7" />
        //app:srcCompat="@drawable/red" />


        <ImageView
            android:id="@+id/counter8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="8" />
        //app:srcCompat="@drawable/red" />


        <ImageView
            android:id="@+id/counter9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="9" />
        //app:srcCompat="@drawable/red" />


    </GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="135dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="10dp"
        android:onClick="reset"
        android:text="Play Again"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/winnerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
